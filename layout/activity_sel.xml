<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:background="#00FFFFFF"
                android:contentDescription="TODO"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationX="-20dp"
                app:srcCompat="@drawable/o"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/BtnOver"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:translationX="10dp"
                app:srcCompat="@drawable/r"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/j" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:translationX="-30dp">

            <ImageButton
                android:id="@+id/BtnBefore"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/w"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/imagefirst"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:srcCompat="@drawable/sel1" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnChoose"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#00FFFFFF"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/af"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="142dp"
            android:layout_height="127dp"
            android:background="#00FFFFFF"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/x"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/win"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="invisible">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/rec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/zz" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/i" />

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/ad" />

                <ImageButton
                    android:id="@+id/imageButton16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/ae" />

            </LinearLayout>
        </FrameLayout>


    </FrameLayout>
</LinearLayout>