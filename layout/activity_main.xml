<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/txbutton"
            android:layout_width="36dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/t7" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:text="1"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/juanzhoubtn"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/juanzhoushu" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button15"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"

            android:layout_weight="1"
            android:background="@drawable/tang"

            />

        <ImageButton
            android:id="@+id/button18"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/song111"
            android:text="Button" />

        <ImageButton
            android:id="@+id/button19"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/yuan"
            android:text="Button" />

        <ImageButton
            android:id="@+id/button20"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/ming"
            android:text="Button" />

        <ImageButton
            android:id="@+id/button21"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/qing"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/begingame"
                    android:layout_width="280dp"
                    android:layout_height="380dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:scaleType="fitStart"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/card2" />

                <ImageButton
                    android:id="@+id/imageButton22"
                    android:layout_width="280dp"
                    android:layout_height="380dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:scaleType="fitStart"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/uncard" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>